Sensor::~Sensor(){
	cout << "Sensor gone hi" << endl;
}
Sensor::Sensor(string n,string u,float v){
	name = n;
	units = u;
	value = v;
}

void Sensor::display(){
	cout << name << endl;
	cout << units << endl;
	cout << value << endl;

}
void Sensor::setName(string x){
	name = x;
}
string Sensor::getName(){
	return name;
}
void Sensor::setUnit(string x){
	units = x;
}
string Sensor::getUnit(){
	return units;
}
void Sensor::setValue(float x){
	value = x;
}
float Sensor::getValue(){
	return value;
}

int main() {
	Sensor one("Big Sensor Lad","Units all day",21);
	one.setName("Bob");
	one.setUnit("yeooo");
	one.setValue(20);
	one.display();
	return 0;
}
