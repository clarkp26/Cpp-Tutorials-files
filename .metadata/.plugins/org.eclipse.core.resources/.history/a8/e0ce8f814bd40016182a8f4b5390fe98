#ifndef SENSOR_H_
#define SENSOR_H_


#include <iostream>
using namespace std;

class Sensor{
private:
	string name;
	string units;
	float value;
public:
	Sensor(string,string,float);
	virtual void display();
	virtual void setName();
	virtual void getName();
	virtual void setUnit();
	virtual void getUnit();
	virtual void setValue();
	virtual void getValue();
	virtual ~Sensor();
};


#endif /* SENSOR_H_ */
