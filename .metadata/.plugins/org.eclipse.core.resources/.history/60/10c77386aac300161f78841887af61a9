#include <iostream>
using namespace std;

class Statistics{
private:
	double a[50];
	int arrayLength;
public:
	Statistics(double aa[],int bb);
	virtual void display();
};
Statistics::Statistics(double aa[50],int bb){
	a = aa;
	arrayLength = bb;
}
void Statistics :: display(){
	cout << "Array contents are: " << endl;
	for (int i =0; i<arrayLength;i++){
		cout << a[i] << endl;
	}
	cout << "Array length is: "<< arrayLength << endl;
}
int main() {
	double a[] = { 21,32,54,32,5,67,76,55,31,23};
	int arrayLength = 10;
	Statistics s(a,arrayLength);
	s.display();
	return 0;
}
